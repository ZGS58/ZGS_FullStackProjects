# EditorConfig helps maintain consistent coding styles across different editors
# For more information, visit: https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# TypeScript files
[*.ts]
indent_size = 2
quote_type = single
ij_typescript_use_double_quotes = false
ij_typescript_use_semicolon_after_statement = true
ij_typescript_spaces_within_imports = true

# JavaScript files
[*.js]
indent_size = 2
quote_type = single

# HTML files
[*.html]
indent_size = 2
ij_html_quote_style = double

# CSS, SCSS, LESS files
[*.{css,scss,sass,less}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2
insert_final_newline = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
max_line_length = off
trim_trailing_whitespace = false
indent_size = 2

# Java files (for backend)
[*.java]
indent_size = 4
ij_java_use_single_class_imports = true

# XML files (for Maven pom.xml, etc.)
[*.xml]
indent_size = 2

# Properties files
[*.properties]
insert_final_newline = false
trim_trailing_whitespace = true

# Shell scripts
[*.sh]
end_of_line = lf
indent_size = 2

# Batch files
[*.{cmd,bat}]
end_of_line = crlf
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
